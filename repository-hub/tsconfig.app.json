{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"] // Apenas se você usar alias
    },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2015", "DOM"],
  },
  "include": ["src"], // Certifique-se de incluir o diretório correto
  "exclude": ["node_modules"]
}
